{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
